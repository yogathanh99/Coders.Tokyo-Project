extends ../layouts/common

block content
  h1
    span.mr-3 Users
    a.btn.btn-success(href="/users/create") Add name
  .d-flex.align-items-center
    form.ml-auto(action="/users/search", method="GET", class="form-row")
      input.mr-2(type="text" name="q", placeholder="Input here", value=q)
      button(class="btn btn-primary") Search
  table.table
    tr
      th Avatar
      th Name
      th Phone
      th Email
      th Actions
    each user in users
      tr
        td
          img.rounded-circle(src=user.avatar, width='64', height='64')
        td=user.name
        td=user.phone
        td=user.email
        td
          a(href=`/users/${user.id}`) View